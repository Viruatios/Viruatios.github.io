---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About CuLoo";

const identity = {
	nickname: "丘露",
	email: "chwflive@outlook.com",
	avatar: "https://avatars.githubusercontent.com/u/140522287?v=4",
	school: "中山大学",
	major: "软件工程",
	occupation: "学生",
};

const habbits = [
	"Playing games",
	"Coding",
	"Making MMDs",
	"Riding shared bikes(?)",
	"and so on...",
];

const textcase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
	<style is:global define:vars={{ textcase }}>
		h1 {
			font-size: 4rem;
		}
		.habbit {
			color: lightcoral;
			font-weight: bold;
			text-transform: var(--textcase);
		}
	</style>

	<h2>……和我的新 Astro 网站！</h2>

	<p>
		我正在学习Astro的入门教程。这是我网站上的第二个页面，也是我自己建立的第一页面！
	</p>

	<p>
		欢迎来到这里！你可以叫我{identity.nickname}。我是一名来自{
			identity.school
		}的{identity.major}专业的{identity.occupation}，可以通过我的邮箱{
			identity.email
		}找到我！
	</p>

	<h3>我的爱好</h3>
	<ul>
		{habbits.map((habit) => <li class="habbit">{habit}</li>)}
	</ul>
</BaseLayout>
